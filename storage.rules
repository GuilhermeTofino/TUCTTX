rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Nova estrutura: /environments/{env}/tenants/{tenantId}/profiles/{userId}
    match /environments/{env}/tenants/{tenantId}/profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Estrutura de Estudos: /environments/{env}/tenants/{tenantId}/studies/{topicId}/{fileName}
    match /environments/{env}/tenants/{tenantId}/studies/{topicId}/{fileName} {
      allow read: if request.auth != null;
      // DEBUG: Simplificando para testar upload (reverta para checklist de admin depois)
      allow write: if request.auth != null;
      // allow write: if request.auth != null && 
      //   firestore.get(/databases/(default)/documents/environments/$(env)/tenants/$(tenantId)/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
