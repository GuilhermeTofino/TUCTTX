rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Nova estrutura: /environments/{env}/tenants/{tenantId}/profiles/{userId}
    match /environments/{env}/tenants/{tenantId}/profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
